<div class="row">
  <div class="col-sm-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Tweet about something</h4>
      </div>
      <div class="panel-body">
        <%= form_for @tweet, url: api_v1_tweets_path(format: :json) do |f| %>
          <div class="row mb-10">
            <div class="col-sm-12">
              <%= f.text_area :tweet_message, class: 'form-control' %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <%= f.submit "Tweet", class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">Your tweets</div>
      <div class="panel-body">
        <div class="tweets-list">
          <div class="template tweet-item">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">Your Followers</div>
          <div class="panel-body">
            <div class="followers-list">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">You are following</div>
          <div class="panel-body">
            <div class="followings-list">

            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">All Tweeters</div>
          <div class="panel-body">
            <div class="tweeters-list">

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-8">

  </div>

</div>

